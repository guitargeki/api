{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Docker Compose Up (Development)",
            "type": "shell",
            "command": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Docker Compose Down (Development)",
            "type": "shell",
            "command": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml down"
        },
        {
            "label": "Docker Compose Up (Production)",
            "type": "shell",
            "command": "docker-compose -f docker-compose.yml up -d --build"
        },
        {
            "label": "Docker Compose Down (Production)",
            "type": "shell",
            "command": "docker-compose -f docker-compose.yml down"
        }
    ]
}